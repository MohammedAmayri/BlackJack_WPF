<Window x:Class="WpfApp2.StartingScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Welcome" Icon="../Images/Icon.png" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
       >
    <Window.Background>
        <ImageBrush ImageSource="../Images/StartScreen/Background.png" />
    </Window.Background>
    <Grid>
        <Canvas>
            <!-- Player Name-->

            <TextBox Name="UserName"  Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2" FontSize="20" Canvas.Left="294" Canvas.Top="293" Width="222" Text="Please Enter Your Name" TextAlignment="Center" GotFocus="TextBox_GotFocus" Background="NavajoWhite"/>
            
            <!--Start Button-->
            <Button Canvas.Bottom="50" Canvas.Left="308"   Style="{StaticResource ChangeStartBtn}" Canvas.Top="325" Click="StartGame_Btn"></Button>
        </Canvas>
    </Grid>
</Window>
