<Window x:Class="BalckJack_Wpf.View.DataGridScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BalckJack_Wpf.View"
        mc:Ignorable="d"
        Title="DataGridScreen" Height="450" Width="800">
    <Grid>
        <ListBox Name="MyListBox" HorizontalAlignment="Left" Height="398" Margin="10,10,0,0" VerticalAlignment="Top" Width="648" ItemsSource="{Binding}"/>
        <Button Name="DeleteBtn" Content="Delete" HorizontalAlignment="Left" Height="60" Margin="680,38,0,0" VerticalAlignment="Top" Width="103" Click="DeleteBtn_Click"/>
        <Button Content="Update" HorizontalAlignment="Left" Height="66" Margin="680,171,0,0" VerticalAlignment="Top" Width="103"/>
    </Grid>
</Window>
